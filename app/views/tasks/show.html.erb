<h1>Tasks#show</h1>
<p>Find me in app/views/tasks/show.html.erb</p>

<h2>
Name : <%= @task.name %>
</h2>

<h3>
Details : <%= @task.details %>
</h3>

<p>
Creation date : <%= @task.created_at %>
</p>

<p>
Last update : <%= @task.updated_at %>
</p>

<%= link_to "Edit the task", edit_task_path(@task) %>

<%= link_to "Delete the task", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>

<%= link_to "Back to the list", tasks_path %>
